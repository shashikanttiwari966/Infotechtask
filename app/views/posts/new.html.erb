<h1>Create Post</h1>
<%= form_with url:posts_path,  method: :post do |f|%>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :tag %><br />
    <%= f.text_field :tag %>
  </div>

  <div class="field">
    <%= f.label :images %><br />
    <%= f.file_field :images, multiple: true %>
  </div><br>

  <div class="actions">
  <%= f.submit "Create" %>
  </div>
<%end%>
